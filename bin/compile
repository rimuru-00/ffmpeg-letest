#!/usr/bin/env bash
set -e
set -x

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

VENDOR_DIR="$BUILD_DIR/vendor"
FFMPEG_DIR="$VENDOR_DIR/ffmpeg"

echo "-----> Installing FFmpeg with full support"

# Install build dependencies
apt-get update -qq
apt-get install -y \
    autoconf \
    automake \
    build-essential \
    cmake \
    git-core \
    libass-dev \
    libfreetype6-dev \
    libgnutls28-dev \
    libmp3lame-dev \
    libsdl2-dev \
    libtool \
    libva-dev \
    libvdpau-dev \
    libvorbis-dev \
    libxcb1-dev \
    pkg-config \
    texinfo \
    wget \
    yasm \
    zlib1g-dev \
    nasm \
    libx264-dev \
    libx265-dev \
    libnuma-dev \
    libvpx-dev \
    libfdk-aac-dev \
    libopus-dev \
    librtmp-dev

mkdir -p $VENDOR_DIR
mkdir -p $FFMPEG_DIR
cd $VENDOR_DIR

# Clone FFmpeg
echo "-----> Cloning FFmpeg"
git clone --depth 1 https://github.com/FFmpeg/FFmpeg.git ffmpeg-src
cd ffmpeg-src

# Configure FFmpeg
./configure \
    --prefix="$FFMPEG_DIR" \
    --pkg-config-flags="--static" \
    --extra-cflags="-I$VENDOR_DIR/include" \
    --extra-ldflags="-L$VENDOR_DIR/lib" \
    --extra-libs="-lpthread -lm" \
    --enable-gpl \
    --enable-nonfree \
    --enable-libfdk-aac \
    --enable-libfreetype \
    --enable-libmp3lame \
    --enable-libopus \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libx264 \
    --enable-libx265 \
    --enable-filters \
    --enable-libass \
    --enable-runtime-cpudetect \
    --enable-postproc \
    --enable-avfilter \
    --enable-pthreads \
    --enable-openssl

# Compile
echo "-----> Compiling FFmpeg"
make -j$(nproc)
make install

# Setup binaries
mkdir -p $BUILD_DIR/bin
cp $FFMPEG_DIR/bin/ffmpeg $BUILD_DIR/bin/
cp $FFMPEG_DIR/bin/ffprobe $BUILD_DIR/bin/
chmod +x $BUILD_DIR/bin/ffmpeg
chmod +x $BUILD_DIR/bin/ffprobe

# Environment setup
mkdir -p $BUILD_DIR/.profile.d
cat << EOF > $BUILD_DIR/.profile.d/ffmpeg.sh
export PATH="\$PATH:/app/bin"
export LD_LIBRARY_PATH="\$LD_LIBRARY_PATH:/app/vendor/ffmpeg/lib"
EOF

# Cleanup
cd $BUILD_DIR
rm -rf $VENDOR_DIR/ffmpeg-src

echo "-----> FFmpeg installation completed"
